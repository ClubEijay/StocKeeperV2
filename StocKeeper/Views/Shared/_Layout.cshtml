<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - StocKeeper</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Improved Font and Icon Libraries -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #2563eb;
            --secondary-color: #1e40af;
            --text-color: #f9fafb;
            --background-color: #22223b;
            --gradient-start: #1e3a8a;
            --gradient-end: #1e40af;
        }

        * {
            transition: all 0.3s ease;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            color: var(--text-color);
            background-color: var(--background-color);
            line-height: 1.6;
        }

        /* Enhanced Navbar Styling */
        .navbar {
            background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
            padding: 1rem 0;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            letter-spacing: -0.5px;
            color: #ffffff;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .navbar-brand:hover {
            transform: scale(1.02);
            text-decoration: none;
        }

        .nav-link {
            font-weight: 500;
            padding: 0.5rem 1rem;
            margin: 0 0.25rem;
            border-radius: 0.375rem;
            color: rgba(255,255,255,0.85);
            position: relative;
            overflow: hidden;
        }

        .nav-link:hover {
            color: #ffffff;
            background-color: rgba(255, 255, 255, 0.1);
        }

        .nav-link::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background-color: #ffffff;
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .nav-link:hover::before {
            transform: scaleX(1);
        }

        /* Body Content */
        .body-content {
            padding: 2rem 0;
            min-height: calc(100vh - 200px);
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .page-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid rgba(255,255,255,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .page-header h1 {
            margin-bottom: 0;
            font-weight: 700;
            color: var(--text-color);
        }

        /* Cards and Containers */
        .card {
            background-color: #2c2f33;
            color: var(--text-color);
            border: none;
        }

        /* Footer Styling */
        .footer {
            background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
            padding: 2rem 0;
            color: white;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .social-links a {
            color: white;
            margin-left: 1rem;
            font-size: 1.25rem;
        }

        .social-links a:hover {
            color: rgba(255,255,255,0.7);
            transform: scale(1.1);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark">
        <div class="container">
            @Html.ActionLink("StocKeeper", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Products", "Index", "Product", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Orders", "Index", "PurchaseOrder", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Suppliers", "Index", "Supplier", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content fade-in" style="background-color: #22223b;">
        <div class="page-header">
            <h1>@ViewBag.Title</h1>
            @if (IsSectionDefined("PageActions"))
            {
                <div class="page-actions">
                    @RenderSection("PageActions", required: false)
                </div>
            }
        </div>
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container footer-content">
            <div>
                <strong>StocKeeper</strong>
                <p class="mb-0">&copy; @DateTime.Now.Year - All rights reserved</p>
                <small>Inventory Management Solution</small>
                <div class="mt-2">
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "text-white me-2 text-decoration-none" })
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "text-white text-decoration-none" })
                </div>
            </div>
            <div class="social-links">
                <a href="https://github.com/ClubEijay/StocKeeperV2" target="_blank" title="GitHub Repository">
                    <i class="fab fa-github"></i>
                </a>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>