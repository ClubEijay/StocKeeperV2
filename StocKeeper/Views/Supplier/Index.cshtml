@model IEnumerable<StocKeeper.Models.Supplier>

<div class="container mt-4">
    <h2>Suppliers</h2>

    <!-- Search and Filter Panel -->
    <div class="card mb-3">
        <div class="card-body">
            @using (Html.BeginForm("Index", "Supplier", FormMethod.Get, new { @class = "row g-3" }))
            {
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Search by Name, Contact, or Address</label>
                        <input type="text" name="SearchString" value="@ViewBag.CurrentFilter" class="form-control" placeholder="Search..." />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Filter by Email</label>
                        <input type="text" name="filterEmail" value="@ViewBag.CurrentEmailFilter" class="form-control" placeholder="Email Filter..." />
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Apply Filters</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Clear Filters</a>
                    @Html.ActionLink("Create New Supplier", "Create", null, new { @class = "btn btn-success float-end" })
                </div>
            }
        </div>
    </div>

    <!-- Suppliers Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Supplier Name</th>
                    <th>Contact Person</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Actions</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.ContactPerson</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Address</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SupplierId }, new { @class = "btn btn-sm btn-warning" }) @Html.ActionLink("Details", "Details", new { id = item.SupplierId }, new { @class = "btn btn-sm btn-info" })
                        </td>
                        <td>
                            <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                                @(item.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
