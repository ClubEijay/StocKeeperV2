@model StocKeeper.Models.ProductViewModel

<div class="container mt-4">
    <h2>Create Product</h2>

    <form asp-action="Create">
        <!-- Name Input -->
        <div class="form-group">
            <label>Name</label>
            <label asp-for="Product.Name" class="control-label"></label>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <!-- Category Input -->
        <div class="form-group">
            <label>Category</label>
            <label asp-for="Product.Category" class="control-label"></label>
            <input asp-for="Product.Category" class="form-control" />
            <span asp-validation-for="Product.Category" class="text-danger"></span>
        </div>

        <!-- Supplier Dropdown -->
        <div class="form-group">
            <label>Supplier</label>
            <label asp-for="Product.SupplierID" class="control-label"></label>
            <select asp-for="Product.SupplierID" class="form-control">
                @foreach (var supplier in Model.Suppliers)
                {
                    <option value="@supplier.Value">@supplier.Text</option>
                }
            </select>
            <span asp-validation-for="Product.SupplierID" class="text-danger"></span>
        </div>

        <!-- Stock Level Input -->
        <div class="form-group">
            <label>Stock Level</label>
            <label asp-for="Product.StockLevel" class="control-label"></label>
            <input asp-for="Product.StockLevel" class="form-control" />
            <span asp-validation-for="Product.StockLevel" class="text-danger"></span>
        </div>

        <!-- Price Input -->
        <div class="form-group">
            <label>Price</label>
            <label asp-for="Product.Price" class="control-label"></label>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
