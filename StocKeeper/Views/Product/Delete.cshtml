@model StocKeeper.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<h2>Delete Product</h2>

<!-- Display validation errors -->
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<h3>Are you sure you want to delete this product?</h3>


<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Name)" readonly />
        </dd>
        <!-- Description -->
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            <textarea class="form-control" readonly>@Html.DisplayFor(model => model.Description)</textarea>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Category.Name)" readonly />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class="col-sm-10">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Supplier.Name)" readonly />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentStock)
        </dt>
        <dd class="col-sm-10">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.CurrentStock)" readonly />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MinimumStockLevel)
        </dt>
        <dd class="col-sm-10">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.MinimumStockLevel)" readonly />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>
        <dd class="col-sm-10">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.UnitPrice)" readonly />
        </dd>
    </dl>

    <form method="post" asp-action="Delete">
        @Html.AntiForgeryToken() <!-- To prevent CSRF attacks -->
        <!-- Hidden field for the product id -->
        <input type="hidden" asp-for="ProductId" />

        <!-- Submit delete confirmation -->
        <button type="submit" class="btn btn-danger">Delete</button>

        <!-- Cancel button -->
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    </form>
</div>