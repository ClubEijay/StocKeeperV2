@{
    ViewBag.Title = "Welcome to StocKeeper";
}

<div class="container mt-5">

    <!-- Hero Section -->
    <div class="jumbotron text-center text-light p-5 mb-5 bg-gradient" style="border-radius: 10px;">
        <img src="~/Images/LOGO.png" alt="Logo" />
        <p class="lead">Your one-stop solution for efficient inventory management.</p>
        <p class="lead">Manage your products, suppliers, and stock levels seamlessly.</p>
        <a class="btn btn-primary btn-lg mt-3" href="@Url.Action("Index", "Product")" role="button">Get Started</a>
    </div>

    <!-- Quick Navigation Cards -->
    <div class="row text-light mt-4">
        <div class="col-md-3 mb-4">
            <div class="card bg-dark h-100 d-flex flex-column  btn-outline-primary">
                <div class="card-body text-center flex-grow-1">
                    <i class="bi bi-box-seam display-4"></i>
                    <h5 class="card-title mt-2 text-body">Products</h5>
                    <p class="card-text text-body">View and manage your product inventory.</p>
                </div>
                <div class="card-footer text-center bg-primary">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-outline-info btn-sm card-footer-fixed">Manage Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-dark h-100 d-flex flex-column btn-outline-primary">
                <div class="card-body text-center flex-grow-1">
                    <i class="bi bi-people display-4"></i>
                    <h5 class="card-title mt-2 text-body">Suppliers</h5>
                    <p class="card-text text-body">Keep track of your trusted suppliers.</p>
                </div>
                <div class="card-footer text-center bg-primary">
                    <a href="@Url.Action("Index", "Supplier")" class="btn btn-primary btn-outline-info btn-sm card-footer-fixed">Manage Suppliers</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-dark h-100 d-flex flex-column  btn-outline-primary">
                <div class="card-body text-center flex-grow-1">
                    <i class="bi bi-stack display-4"></i>
                    <h5 class="card-title mt-2 text-body">Inventory</h5>
                    <p class="card-text text-body">Monitor stock levels and log adjustments.</p>
                </div>
                <div class="card-footer text-center bg-primary">
                    <a href="@Url.Action("Index", "Inventory")" class="btn btn-primary btn-outline-info btn-sm card-footer-fixed">View Inventory</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-dark h-100 d-flex flex-column  btn-outline-primary">
                <div class="card-body text-center flex-grow-1">
                    <i class="bi bi-file-earmark-text display-4"></i>
                    <h5 class="card-title mt-2 text-body">Purchase Orders</h5>
                    <p class="card-text text-body">Create and track purchase orders.</p>
                </div>
                <div class="card-footer text-center bg-primary">
                    <a href="@Url.Action("Index", "PurchaseOrder")" class="btn btn-primary btn-outline-info btn-sm card-footer-fixed">View Orders</a>
                </div>
            </div>
        </div>
    </div>

    <br /><br /><br /><br />
    <!-- System Stats Section -->
    <div class="mt-5 text-light">
        <h3 class="mb-3 text-center">System Overview</h3>
        <div class="row justify-content-center">
            <div class="col-md-4 mb-3">
                <button class="card bg-primary text-light border-0 w-100 d-flex align-items-center justify-content-center btn btn-info" 
                        onclick="window.location.href='@Url.Action("Index", "Product")'">
                    <div class="card-body">
                        <h2>@ViewBag.TotalProducts</h2>
                        <p>Total Products</p>
                    </div>
                </button>
            </div>
            <div class="col-md-4 mb-3">
                <button class="card bg-warning text-dark border-0 w-100 d-flex align-items-center justify-content-center btn btn-info" 
                        onclick="window.location.href='@Url.Action("Index", "Supplier")'">
                    <div class="card-body">
                        <h2>@ViewBag.TotalSuppliers</h2>
                        <p>Total Suppliers</p>
                    </div>
                </button>
            </div>
        </div>
    </div>
</div>
