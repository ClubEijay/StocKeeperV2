@model StocKeeper.Models.InventoryViewModel

<div class="container mt-4">
    <h2>Create Inventory Adjustment</h2>

    <form asp-action="Create">
        <!-- Product Dropdown -->
        <div class="form-group">
            <label>Product</label>
            <label asp-for="Inventory.ProductID" class="control-label"></label>
            <select asp-for="Inventory.ProductID" class="form-control">
                @foreach (var product in Model.Products)
                {
                    <option value="@product.Value">@product.Text</option>
                }
            </select>
            <span asp-validation-for="Inventory.ProductID" class="text-danger"></span>
        </div>

        <!-- Quantity Input -->
        <div class="form-group">
            <label>Quantity</label>
            <label asp-for="Inventory.Quantity" class="control-label"></label>
            <input asp-for="Inventory.Quantity" class="form-control" />
            <span asp-validation-for="Inventory.Quantity" class="text-danger"></span>
        </div>

        <!-- Adjustment Type Input -->
        <div class="form-group">
            <label>Adjustment Type</label>
            <label asp-for="Inventory.AdjustmentType" class="control-label"></label>
            <input asp-for="Inventory.AdjustmentType" class="form-control" />
            <span asp-validation-for="Inventory.AdjustmentType" class="text-danger"></span>
        </div>

        <!-- Date Input -->
        <div class="form-group">
            <label>Date</label>
            <label asp-for="Inventory.Date" class="control-label"></label>
            <input asp-for="Inventory.Date" class="form-control" type="datetime-local" />
            <span asp-validation-for="Inventory.Date" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
